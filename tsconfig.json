{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "compilerOptions": {
    "jsx": "react-native",
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "types": ["node", "jest"],
    "baseUrl": "./",
    "paths": {
      "src/*": ["./src/*"],
      "@assets/*": ["./src/assets/*"],
      "@common/*": ["./src/common/*"],
      "@navigation/*": ["./src/navigation/*"],
      "@redux/*": ["./src/redux/*"],
      "@screens/*": ["./src/screens/*"],
      "@utils/*": ["./src/utils/*"]
    }
  },
  "include": [
    "App.tsx",
    "src",
    "src/*",
    "src/assets",
    "src/common",
    "src/navigation",
    "src/redux",
    "src/screens",
    "src/utils",
    "mock-server",
    "__tests__",
    "@types/*"
  ],
  "exclude": ["node_modules", "node_modules/*"]
}
